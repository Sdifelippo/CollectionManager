        <label>Type</label><input type="text" name="type" value="{{foundGames.genre}}">
        <br>
        <label>gender</label><input type="text" name="gender" value="{{foundGames.publisher}}">
        <br>
        <label>size</label><input type="text" name="size" value="{{foundGames.developer}}">
        <br>
        <label>health</label><input type="text" name="health" value="{{foundGames.system}}">
        <br>
      <input type="submit" value="update">
